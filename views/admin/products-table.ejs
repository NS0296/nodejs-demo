<%- include("../inc/head.ejs") %>
<link rel="stylesheet" href="/css/tables.css">
<link rel="stylesheet" href="/css/horizontal-form.css">
    </head>
    <body>
        <header>
            <%- include("../inc/nav.ejs") %>
        </header>
        <main>
            <form class="box item-form" action="http://localhost:3000/api/items/create" method="POST">
                <input type="text" name="name" id="name" placeholder="Name">
                <input type="text" name="categoryName" id="category-name" placeholder="Category Name">
                <input type="text" name="manufacture" id="manufacture" placeholder="Manufacture">
                <input type="number" name="price" id="price" placeholder="Price">
                <input type="text" name="stockAvailable" id="stock-available" placeholder="Stock Available">
                <button id="insert-item-btn" type="submit">Insert Item</button>
            </form>
            <table style="table-layout: fixed;"class="items-table table">
                <thead id="thead">
                    <tr>
                        <th>ID</th>
                        <th>TITLE</th>
                        <th>CATEGORY NAME</th>
                        <th>PRICE</th>
                        <th>STOCK</th>
                        <th id="actions-column">Actions</th>
                    </tr>
                </thead>
                <tBody id="tbody">
                    <% allProducts.forEach(product => { %>
                        <tr data-product-id="<%= product.id %>">
                            <td><%= product.id %></td>
                            <td><%= product.title %></td>
                            <td><%= product.category_name %></td>
                            <td><%= product.price %></td>
                            <td><%= product.stock %></td>
                        </tr>
                    <% }); %>
                </tBody>
            </table>
        </main>
        <script src="/js/admin-products-table.js"></script>
<%- include("../inc/end.ejs") %>