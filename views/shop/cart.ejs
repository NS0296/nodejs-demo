<%- include("../inc/head.ejs") %>
<link rel="stylesheet" href="/css/tables.css">
    </head>
    <body>
        <header>
            <%- include("../inc/nav.ejs") %>
        </header>
        <main>
            <table style="table-layout: fixed;"class="products-table table">
                <thead id="thead">
                    <tr>
                        <th>TITLE</th>
                        <th>CATEGORY</th>
                        <th>PRICE</th>
                        <th id="actions-column">Actions</th>
                    </tr>
                </thead>
                <tBody id="tbody">
                    <% cartProducts.forEach(product => { %>
                        <tr data-product-id="<%= product.id %>">
                            <td><%= product.title %></td>
                            <td><%= product.category_name %></td>
                            <td><%= product.price %></td>
                        </tr>
                    <% }); %>
                </tBody>
            </table>
            <a href="/cart/checkout">Checkout</a>
            <input type="text" name="user-id" id="user-id" value=<%= userId %> hidden>
            <script src="/js/cart-products-table.js"></script>
        </main>
<%- include("../inc/end.ejs") %>